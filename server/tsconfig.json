{
  "compilerOptions": {
    "target": "es2015",            // Changed from es5 to support modern features
    "module": "commonjs",
    "lib": ["es2015", "dom"],      // Added lib to include necessary APIs
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,        // Temporarily set to false to fix implicit any errors
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],         // Added to explicitly include source files
  "exclude": ["node_modules"]       // Added to exclude node_modules
}